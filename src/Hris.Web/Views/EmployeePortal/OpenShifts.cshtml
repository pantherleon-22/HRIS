@model Hris.Web.Controllers.EmployeePortalController.OpenShiftsVm

@{
    ViewData["Title"] = "Open Shifts";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Open Shifts</h1>
            <div class="text-muted">Available shifts you can apply to</div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="text-muted small">Range</div>
                    <div class="fw-semibold">@Model.FromDate.ToString("dd MMM yyyy") → @Model.ToDate.ToString("dd MMM yyyy")</div>
                </div>
                <div class="col-md-6">
                    <div class="text-muted small">Change Start Date</div>
                    <form method="get" class="d-flex gap-2">
                        <input type="date" name="from" value="@Model.FromDate.ToString("yyyy-MM-dd")" class="form-control" />
                        <button class="btn btn-outline-light" type="submit">Go</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Shifts</h5>
        </div>
        <div class="card-body">
            @if (!Model.Rows.Any())
            {
                <div class="text-muted">No open shifts in this range.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Job Type</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Remaining</th>
                                <th>Status</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var row in Model.Rows)
                        {
                            <tr>
                                <td><span class="badge badge-soft">@row.JobType</span></td>
                                <td class="fw-semibold">@row.WorkDate.ToString("dd MMM yyyy")</td>
                                <td>@row.Start.ToString(@"hh\:mm") → @row.End.ToString(@"hh\:mm")</td>
                                <td>
                                    <span class="badge badge-soft">@row.Remaining</span>
                                    <span class="text-muted small">/ @row.Capacity</span>
                                </td>
                                <td>
                                    @if (row.MyStatus is null)
                                    {
                                        <span class="text-muted small">Not applied</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-soft">@row.MyStatus</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (row.IsFull)
                                    {
                                        <button class="btn btn-outline-light btn-sm" disabled>Full</button>
                                    }
                                    else if (row.AlreadyApplied)
                                    {
                                        <button class="btn btn-outline-light btn-sm" disabled>Applied</button>
                                    }
                                    else
                                    {
                                        <form asp-action="Apply" method="post" class="d-inline">
                                            <input type="hidden" name="shiftId" value="@row.ShiftId" />
                                            <input type="hidden" name="from" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                                            <button class="btn btn-primary btn-sm" type="submit">Apply</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
