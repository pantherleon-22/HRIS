@model Hris.Web.Controllers.EmployeePortalController.AskHrVm

@{
    ViewData["Title"] = "Ask HR";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Ask HR</h1>
            <div class="text-muted">Send a message to HR and see replies</div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">New Message</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AskHr" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Post.Subject" class="form-label">Subject</label>
                            <input asp-for="Post.Subject" class="form-control" />
                            <span asp-validation-for="Post.Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Post.Body" class="form-label">Message</label>
                            <textarea asp-for="Post.Body" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Post.Body" class="text-danger"></span>
                        </div>

                        <button class="btn btn-primary w-100" type="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">My Messages</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Messages.Any())
                    {
                        <div class="text-muted">No messages yet.</div>
                    }
                    else
                    {
                        foreach (var m in Model.Messages)
                        {
                            <div class="mb-3 pb-3 border-bottom" style="border-color: rgba(255,255,255,0.08) !important;">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="fw-semibold">@m.Subject</div>
                                    <span class="badge badge-soft">@m.Status</span>
                                </div>
                                <div class="text-muted small mb-2">@m.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</div>
                                <div class="mb-2">@m.Body</div>

                                @if (!string.IsNullOrWhiteSpace(m.HrReply))
                                {
                                    <div class="card mt-2">
                                        <div class="card-body">
                                            <div class="text-muted small mb-1">HR Reply</div>
                                            <div>@m.HrReply</div>
                                            @if (m.RepliedAt != null)
                                            {
                                                <div class="text-muted small mt-2">@m.RepliedAt.Value.ToLocalTime().ToString("dd MMM yyyy HH:mm")</div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
