@model Hris.Web.Controllers.DepartmentsController.DepartmentDetailsVm

@{
    ViewData["Title"] = "Department Details";
}

<div class="page-title">
    <div>
        <h1>@Model.Name</h1>
        <div class="text-muted">@Model.EmployeeCount employee(s)</div>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-light btn-sm">Back</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Employees by Title</h5>
            </div>
            <div class="card-body">
                @if (!Model.TitleGroups.Any())
                {
                    <div class="text-muted">No employees found in this department.</div>
                }
                else
                {
                    foreach (var group in Model.TitleGroups)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="fw-semibold">@group.Title</div>
                                <span class="badge badge-soft">@group.Count</span>
                            </div>
                            <div class="table-responsive mt-2">
                                <table class="table table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var e in group.Employees)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@e.FullName</td>
                                            <td><a href="mailto:@e.Email">@e.Email</a></td>
                                            <td class="text-end">
                                                <a asp-controller="Employees" asp-action="Details" asp-route-id="@e.Id" class="btn btn-outline-light btn-sm">Profile</a>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Summary</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted small">Total Employees</span>
                    <span class="fw-semibold">@Model.EmployeeCount</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted small">Titles</span>
                    <span class="fw-semibold">@Model.TitleGroups.Count</span>
                </div>
            </div>
        </div>
    </div>
</div>
