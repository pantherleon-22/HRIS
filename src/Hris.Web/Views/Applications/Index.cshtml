@model Hris.Web.Controllers.ApplicationsController.PendingApplicationsVm

@{
    ViewData["Title"] = "Applications";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Pending Applications</h1>
            <div class="text-muted">Review and decide employee shift requests</div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Queue</h5>
        </div>
        <div class="card-body">
            @if (!Model.Rows.Any())
            {
                <div class="text-muted">No pending applications.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Shift</th>
                                <th>Applied</th>
                                <th class="text-end">Decision</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var row in Model.Rows)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@row.EmployeeName</div>
                                    <div class="text-muted small">@row.Email</div>
                                </td>
                                <td>
                                    <div><span class="badge badge-soft">@row.JobType</span></div>
                                    <div class="text-muted small">@row.WorkDate.ToString("dd MMM yyyy") • @row.Start.ToString(@"hh\:mm")–@row.End.ToString(@"hh\:mm")</div>
                                </td>
                                <td class="text-muted small">@row.AppliedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                                <td class="text-end">
                                    <div class="d-flex gap-2 justify-content-end">
                                        <form asp-action="Approve" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@row.ApplicationId" />
                                            <button class="btn btn-primary btn-sm" type="submit">Approve</button>
                                        </form>
                                        <form asp-action="Reject" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@row.ApplicationId" />
                                            <button class="btn btn-outline-light btn-sm" type="submit">Reject</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
