@model Hris.Web.Controllers.AccountController.LoginVm

@{
    ViewData["Title"] = "Sign In";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Giriş</h1>
            <div class="text-muted">Employee portal ve HR dashboard</div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Giriş</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label class="form-label">E-posta</label>
                            <input name="Email" value="@Model.Email" class="form-control" placeholder="you@company.com" />
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Şifre</label>
                            <input name="Password" type="password" class="form-control" placeholder="••••••••" />
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <a asp-action="ForgotPassword" class="small">Şifremi unuttum</a>
                            <span class="text-muted small">Demo: DB seed var</span>
                        </div>

                        <button class="btn btn-primary w-100" type="submit">Giriş Yap</button>

                        <div class="text-muted small mt-3">
                            <div class="fw-semibold">Test giriş bilgileri</div>
                            <div>Admin: <span class="text-muted">admin@hris.local</span> / <span class="text-muted">Admin123!</span></div>
                            <div>HR: <span class="text-muted">hr@hris.local</span> / <span class="text-muted">Hr123!</span></div>
                            <div>Employee: <span class="text-muted">employee1@hris.local</span> / <span class="text-muted">Employee123!</span></div>
                            <div>Employee: <span class="text-muted">employee2@hris.local</span> / <span class="text-muted">Employee123!</span></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
