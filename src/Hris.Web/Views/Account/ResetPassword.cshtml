@model Hris.Web.Controllers.AccountController.ResetPasswordVm

@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Şifre Sıfırla</h1>
            <div class="text-muted">Token ile yeni şifre belirle</div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Login" class="btn btn-outline-light btn-sm">Geri</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <input type="hidden" name="Email" value="@Model.Email" />
                <input type="hidden" name="Token" value="@Model.Token" />

                <div class="mb-3">
                    <div class="text-muted small">E-posta</div>
                    <div class="fw-semibold">@Model.Email</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Yeni şifre</label>
                    <input name="NewPassword" type="password" class="form-control" />
                    <div class="form-text">Minimum 8 karakter</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Yeni şifre (tekrar)</label>
                    <input name="ConfirmPassword" type="password" class="form-control" />
                </div>

                <button class="btn btn-primary" type="submit">Şifreyi güncelle</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
