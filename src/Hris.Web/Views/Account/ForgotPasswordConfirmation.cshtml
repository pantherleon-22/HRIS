@model Hris.Web.Controllers.AccountController.ForgotPasswordConfirmationVm

@{
    ViewData["Title"] = "Reset Token";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Reset Token</h1>
            <div class="text-muted">Hesap varsa token üretildi</div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Login" class="btn btn-outline-light btn-sm">Giriş'e dön</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="mb-2"><span class="text-muted">E-posta:</span> <span class="fw-semibold">@Model.Email</span></div>

            @if (!string.IsNullOrWhiteSpace(Model.Token))
            {
                <div class="alert alert-info" role="alert">
                    <div class="fw-semibold mb-1">Demo reset token</div>
                    <div style="word-break: break-all;">@Model.Token</div>
                </div>

                <a class="btn btn-primary" asp-action="ResetPassword" asp-route-email="@Model.Email" asp-route-token="@Model.Token">Şifreyi sıfırla</a>
            }
            else
            {
                <div class="text-muted">Güvenlik için e-posta var/yok bilgisi göstermiyoruz.</div>
            }
        </div>
    </div>
</div>
