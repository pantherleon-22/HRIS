@model Hris.Web.Controllers.AccountController.ForgotPasswordVm

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Şifremi Unuttum</h1>
            <div class="text-muted">Reset token oluştur (demo)</div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Login" class="btn btn-outline-light btn-sm">Geri</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label class="form-label">E-posta</label>
                    <input name="Email" value="@Model.Email" class="form-control" placeholder="you@company.com" />
                </div>

                <button class="btn btn-primary" type="submit">Reset token oluştur</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
