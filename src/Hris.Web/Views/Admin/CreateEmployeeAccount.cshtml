@model Hris.Web.Controllers.AdminController.CreateEmployeeAccountVm

@{
    ViewData["Title"] = "Çalışan Hesabı Oluştur";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Çalışan Hesabı Oluştur</h1>
            <div class="text-muted">@Model.EmployeeName</div>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-light btn-sm" asp-action="Index">Geri</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="CreateEmployeeAccount" method="post">
                <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />

                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <div class="text-muted small">E-posta</div>
                    <div class="fw-semibold">@Model.Email</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Şifre</label>
                    <input name="Password" type="password" class="form-control" />
                    <div class="form-text">Minimum 8 karakter</div>
                </div>

                <button class="btn btn-primary" type="submit">Hesap Oluştur</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
