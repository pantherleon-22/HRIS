@model Hris.Web.Controllers.AdminController.SetPasswordVm

@{
    ViewData["Title"] = "Şifre Ata";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Şifre Ata</h1>
            <div class="text-muted">@Model.Email (@Model.Role)</div>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-light btn-sm" asp-action="Index">Geri</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="SetPassword" method="post">
                <input type="hidden" name="AccountId" value="@Model.AccountId" />

                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                @if (!string.IsNullOrWhiteSpace(Model.EmployeeName))
                {
                    <div class="mb-3">
                        <div class="text-muted small">Çalışan</div>
                        <div class="fw-semibold">@Model.EmployeeName</div>
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">Yeni şifre</label>
                    <input name="NewPassword" type="password" class="form-control" />
                    <div class="form-text">Minimum 8 karakter</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Yeni şifre (tekrar)</label>
                    <input name="ConfirmPassword" type="password" class="form-control" />
                </div>

                <button class="btn btn-primary" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
