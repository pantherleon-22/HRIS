@model Hris.Web.Controllers.AdminController.CreateHrVm

@{
    ViewData["Title"] = "Yeni HR";
}

<div class="container-narrow">
    <div class="page-title">
        <div>
            <h1>Yeni HR Hesabı</h1>
            <div class="text-muted">Sadece Admin oluşturabilir</div>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-light btn-sm" asp-action="Index">Geri</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="CreateHr" method="post">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label class="form-label">E-posta</label>
                    <input name="Email" value="@Model.Email" class="form-control" placeholder="hr2@company.com" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Şifre</label>
                    <input name="Password" type="password" class="form-control" />
                    <div class="form-text">Minimum 8 karakter</div>
                </div>

                <button class="btn btn-primary" type="submit">Oluştur</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
