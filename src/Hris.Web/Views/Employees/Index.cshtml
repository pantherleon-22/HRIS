@model IEnumerable<Hris.Web.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="page-title">
    <div>
        <h1>Employees</h1>
        <div class="text-muted">Employee master data, department and title mapping.</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="Create">+ New Employee</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Hire Date</th>
                        <th>Ext. Exp (yrs)</th>
                        <th>Department</th>
                        <th>Title</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@item.FullName</div>
                                <div class="text-muted">Total exp: @item.TotalExperienceYears.ToString("0.0") yrs</div>
                            </td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.HireDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.ExternalExperienceYears</td>
                            <td><span class="badge badge-soft">@item.Department.Name</span></td>
                            <td><span class="badge badge-soft">@item.Title.Name</span></td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-light" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-sm btn-outline-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
