@model IEnumerable<Hris.Web.Models.Shift>

@{
    ViewData["Title"] = "Shifts";
}

<div class="page-title">
    <div>
        <h1>Shifts</h1>
        <div class="text-muted">Open slots with capacity and required job type.</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="Create">+ New Shift</a>
        <a class="btn btn-outline-light" asp-action="GenerateTwoWeek">⚙️ Generate 2-Week</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Job Type</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Capacity</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge badge-soft">@item.JobType.Name</span></td>
                            <td>@item.WorkDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <span class="fw-semibold">@item.StartTime.ToString(@"hh\:mm")</span>
                                <span class="text-muted">→</span>
                                <span class="fw-semibold">@item.EndTime.ToString(@"hh\:mm")</span>
                            </td>
                            <td>@item.Capacity</td>
                            <td>
                                <span class="badge badge-soft">@item.Status</span>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-light" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-sm btn-outline-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
